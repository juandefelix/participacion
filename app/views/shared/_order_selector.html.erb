<% # Params:
   #
   #   i18n_namespace: for example "moderation.debates.index"
%>

<form class="inline-block">
  <select class="js-ajax-location-changer js-order-selector select-order" data-order="<%= @current_order %>" name="order-selector">
     <% @valid_orders.each do |order| %>
       <option <%= 'selected' if order == @current_order %>
               value='<%= order %>'>
         <%= t("#{i18n_namespace}.orders.#{order}") %>
       </option>
     <% end %>
   </select>
</form>
